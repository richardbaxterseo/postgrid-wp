# WordPress Plugin Development .gitignore

# Dependencies
/vendor/
/node_modules/

# Build files (keep build directory but not contents)
/build/*
!/build/.gitkeep
/dist/*
!/dist/.gitkeep

# Development files
*.log
*.sql
*.sqlite
.DS_Store
Thumbs.db

# IDE files
/.vscode/
/.idea/
*.sublime-project
*.sublime-workspace
.project
.settings/

# Testing
/tests/coverage/
/tests/logs/
phpunit.xml
.phpunit.result.cache

# Environment files
.env
.env.local
.env.*.local

# WordPress
/wordpress/
/wp-content/

# Composer
composer.lock

# NPM
package-lock.json
yarn.lock

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db

# Backup files
*.bak
*.backup
*~

# Cache
.sass-cache/
/cache/

# Temporary files
*.tmp
*.temp
/tmp/

# Security - never commit these
*.pem
*.key
*.crt
*.p12
