{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "posts-grid-block/posts-grid",
	"version": "1.0.0",
	"title": "Posts Grid",
	"category": "widgets",
	"icon": "grid-view",
	"description": "Display posts in a responsive grid layout",
	"textdomain": "posts-grid-block",
	"attributes": {
		"postsPerPage": {
			"type": "number",
			"default": 6
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		},
		"order": {
			"type": "string",
			"default": "desc"
		},
		"selectedCategory": {
			"type": "number",
			"default": 0
		},
		"columns": {
			"type": "number",
			"default": 3
		},
		"showDate": {
			"type": "boolean",
			"default": true
		},
		"showExcerpt": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css"
}
